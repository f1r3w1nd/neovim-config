{
  // Require .prettierrc
  "prettier.requireConfig": true,

  // Tslint on save
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.run": ["onType"],

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "java",
    "scala",
    "yaml",
    "json",
    "svelte"
  ],

  "diagnostic.checkCurrentLine": true,

  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
    "explorer.file.hiddenRules": {
		"filenames": ["node_modules", ".git", ".DS_STORE"]
  },
  "explorer.file.showHiddenFiles": false,

  "java.configuration.runtimes": [
    { "name": "JavaSE-13", "path": "/Library/Java/JavaVirtualMachines/jdk-13.0.2.jdk/Contents/Home", "default": true }
  ],
  "markdown-preview-enhanced.breakOnSingleNewLine": true,
  "svelte.enable-ts-plugin": true,
  "diagnostic-languageserver.filetypes": {
    "markdown": [ "write-good", "markdownlint" ],
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  }
}

