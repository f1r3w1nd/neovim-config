{
  // Require .prettierrc
  "prettier.requireConfig": true,

  // Tslint on save
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.run": ["onType"],

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "java",
    "scala",
    "yaml",
    "json",
    "svelte"
  ],

  "diagnostic.checkCurrentLine": true,

  "explorer.width": 30,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "s": "open:split",
    "mm": "rename",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory"
  },
    "explorer.file.hiddenRules": {
		"filenames": ["node_modules", ".git", ".DS_STORE"]
  },
  "explorer.file.showHiddenFiles": false,
  "explorer.file.reveal.whenOpen": false,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",

  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  
  "java.configuration.runtimes": [
    { "name": "JavaSE-13", "path": "/Library/Java/JavaVirtualMachines/jdk-13.0.2.jdk/Contents/Home", "default": true }
  ],
  "markdown-preview-enhanced.breakOnSingleNewLine": true,
  "svelte.enable-ts-plugin": true,
  "diagnostic-languageserver.filetypes": {
    "markdown": [ "write-good", "markdownlint" ],
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },

